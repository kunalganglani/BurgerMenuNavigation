<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="140dp"
    android:background="@drawable/navigation_background"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/header_img_id"
        android:src="@drawable/my_pic"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRAKASH UPADHAY"
        android:layout_toRightOf="@+id/header_img_id"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/header_name_id"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="prakashupadhyay.com"
        android:layout_toRightOf="@+id/header_img_id"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/website_id"
        android:layout_below="@+id/header_name_id"
        />

</RelativeLayout>